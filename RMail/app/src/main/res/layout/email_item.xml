<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:id="@+id/txt_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="24dp"
            tools:text="F"
            android:textColor="@android:color/white"
            android:background="@drawable/circle"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            tools:text="Facebook"
            android:textColor="@android:color/darker_gray"
            android:layout_toEndOf="@id/txt_icon"
            android:layout_alignTop="@id/txt_icon"
            android:layout_toStartOf="@id/txt_date"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/subject"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_user"
            android:layout_alignStart="@id/txt_user"
            android:textSize="16dp"
            tools:text="Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook "
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/text_preview"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subject"
            android:layout_alignStart="@id/txt_user"
            android:textSize="16dp"
            android:layout_marginEnd="24dp"
            tools:text="Preview"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            tools:text="20 Mai" />

        <ImageView
            android:id="@+id/img_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_star_border_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>